<div class="container">
  <h1 class="container text-center"> <%= @list.name %></h1>
    <div class="d-flex justify-content-end">
    <%= link_to "Add Bookmark", new_list_bookmark_path(@list ), class: "btn btn-primary" %>
      <%= button_to "Delete List", list_path(@list), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        <%= link_to 'Back', list_path(@list), class:"btn btn-secondary" %>
    </div>
    <div class="d-flex justify-content-around">
      <% @bookmarks.each do |bookmark| %>
        <div class="card text-center" style="width: 20rem;">
          <%= image_tag bookmark.movie.poster_url, class:"card-img-top rounded" %>
          <div class="card-body">
          <strong><h3><%= bookmark.movie.title %></h3></strong>
            <small><p><%= "#{bookmark.movie.rating.to_i}/10" %></p></small>
            <p><%= bookmark.movie.overview %></p>
            <h4><em>"<%= bookmark.comment %>"</em></h4>
          </div>
        </div>
        <% end %>
    </div>
</div>
